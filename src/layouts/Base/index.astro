---
import HtmlHead from '../../components/HtmlHead/index.astro';
import SiteFooter from '../../components/SiteFooter/index.astro';

import './base.css';

interface Props {
	title: string,
	htmlTitle?: string[],
	url: string,
	description: string,
	author?: string,
	tags?: string[],
	image?: string,
	imageAlt?: string,
	createdAt?: Date,
	updatedAt?: Date,
	hasFeed?: boolean,
	pageSchema?: string
}

const {
	title,
	htmlTitle,
	description,
	author,
	url,
	tags,
	image,
	imageAlt,
	createdAt,
	updatedAt,
	hasFeed = false,
	pageSchema = 'WebPage'
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en-US" itemscope itemtype={`https://schema.org/${pageSchema}`}>
	<HtmlHead
		htmlTitle={htmlTitle}
		title={title}
		url={url}
		description={description}
		author={author}
		tags={tags}
		image={image}
		imageAlt={imageAlt}
		createdAt={createdAt}
		updatedAt={updatedAt}
		hasFeed={hasFeed}
	/>
	<body class:list={[{ 'h-entry': hasFeed, 'font-sans mb-6': true }]}>
		<slot name="header"></slot>
		<main class="w-auto mx-auto px-4 desktop:px-9 bg-mainRed">
			<slot></slot>
		</main>

		<footer id="site-footer" class="p-2 bg-[#13110b] font-bold text-white w-full">
			<slot name="footer"></slot>
			<SiteFooter />
		</footer>
	</body>
</html>
